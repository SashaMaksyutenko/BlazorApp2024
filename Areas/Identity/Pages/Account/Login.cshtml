@* @page
@model LoginModel

@{
ViewData["Title"] = "Log in";
}

<div class="mt-5" style="height:100%">
<div class="h-100 d-flex align-items-center justify-content-center">
<div class="card bg-light" style="min-width: 28rem;">
<div class="card-body">
<section>
<form id="account" method="post" class="d-flex flex-column align-items-center">
<h5 class="card-title text-center display-6">@ViewData["Title"]</h5>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

<!-- Form inputs -->
<div class="form-floating mb-3 w-100">
<input asp-for="Input.Email" class="form-control" autocomplete="username"
aria-required="true" placeholder="name@example.com" />
<label asp-for="Input.Email" class="form-label">Email</label>
<span asp-validation-for="Input.Email" class="text-danger"></span>
</div>
<div class="form-floating mb-3 w-100">
<input asp-for="Input.Password" class="form-control" autocomplete="current-password"
aria-required="true" placeholder="password" />
<label asp-for="Input.Password" class="form-label">Password</label>
<span asp-validation-for="Input.Password" class="text-danger"></span>
</div>
<div class="checkbox mb-3 w-100">
<label asp-for="Input.RememberMe" class="form-label">
<input class="form-check-input" asp-for="Input.RememberMe" />
@Html.DisplayNameFor(m => m.Input.RememberMe)
</label>
</div>

<!-- Login button placed at the bottom -->
<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Log
in</button>

<!-- Links below the button -->
<div>
<p>
<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
</p>
<p>
<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new
user</a>
</p>
<p>
<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
confirmation</a>
</p>
</div>
</form>
</section>
</div>
<div class="h-100 d-flex align-items-center justify-content-center">
<section>
<hr />
@if ((Model.ExternalLogins?.Count ?? 0) == 0)
{
<div class="h-100 d-flex align-items-center justify-content-center">
<p>
There are no external authentication services configured. See this <a
href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up this
ASP.NET application to support logging in via external services</a>.
</p>
</div>
}
else
{
<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
method="post" class="form-horizontal">
<div class="d-grid gap-2 w-100">
@foreach (var provider in Model.ExternalLogins!)
{
<button type="submit" class="btn btn-outline-dark w-100" name="provider" value="@provider.Name"
title="Log in using your @provider.DisplayName account">
Connect <span class="d-none d-sm-inline">with a @provider.DisplayName</span>
</button>

}
</div>
</form>
<hr />
<p class="text-center mt-2">
<small class="text-muted text-center">
Don't have an account yet?
<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
</small>
</p>
}
</section>
</div>
</div>
</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
} *@
@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="mt-4" style="height:100%">
    <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="card bg-light" style="min-width: 28rem;">
            <div class="card-body">
                <section>
                    <form id="account" method="post" class="d-flex flex-column align-items-center">
                        <!-- Заголовок з меншим відступом -->
                        <h5 class="card-title text-center display-6 mb-3">@ViewData["Title"]</h5>

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Інпути з меншими відступами -->
                        <div class="form-floating mb-2 w-100">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 w-100">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-2 w-100">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Кнопка логіну -->
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Log
                            in</button>

                        <!-- Лінки з меншим відступом -->
                        <div class="text-center mb-0">
                            <p class="mb-1"><a id="forgot-password" asp-page="./ForgotPassword">Forgot your
                                    password?</a></p>
                            <p class="mb-1"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as
                                    a new user</a></p>
                            <p class="mb-1"><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend
                                    email confirmation</a></p>
                        </div>
                    </form>
                </section>
            </div>
            <!-- Кнопки зовнішніх провайдерів -->
            <div class="h-100 d-flex align-items-center justify-content-center">
                <section class="w-100 px-3">
                    <hr class="mt-1"/>
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="text-center">
                            <p>There are no external authentication services configured. See this <a
                                    href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up this
                                    ASP.NET application to support logging in via external services</a>.</p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                            method="post" class="form-horizontal">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <!-- Зміст кнопки з меншими відступами -->
                                    <button type="submit" class="btn btn-outline-dark w-100 mb-1" name="provider"
                                        value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        Connect <span class="d-none d-sm-inline">with a @provider.DisplayName</span>
                                    </button>
                                }
                            </div>
                        </form>
                        <hr />
                        <p class="text-center mt-1">
                            <small class="text-muted">
                                Don't have an account yet?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                            </small>
                        </p>
                    }
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
